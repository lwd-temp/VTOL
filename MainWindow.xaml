                <Button x:Name="Clear_LOG" Content="清除日志" Height="36" HorizontalAlignment="Stretch" Margin="568,0,40,0" Background="#FF1E4C51" Click="Clear_LOG_Click"/>
            </hc:SimplePanel>
            <hc:SimplePanel/>
