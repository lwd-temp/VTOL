                <Border BorderThickness="1" Background="#FF101010" Height="129" VerticalAlignment="Bottom" >
                    <Label Content="选择目标ZIP" Margin="24,28,0,55" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left" Foreground="White" FontFamily="Gadugi" FontWeight="Normal" VerticalAlignment="Stretch" Height="44" Width="109"/>
